@model CVManager.DTO.CvDetailWithDegreesDto

<div class="form-group">
    <div>
        <label asp-for="FirstName">First Name</label>
    </div>
    <div>
        <input asp-for="FirstName" value="@Model.FirstName">
        <div><span asp-validation-for="FirstName" class="text-danger"></span></div>
    </div>
</div>

<div class="form-group">
    <div>
        <label asp-for="LastName">Last Name</label>
    </div>
    <div>
        <input asp-for="LastName" value="@Model.LastName">
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
    </div>
</div>

<div class="form-group">
    <div>
        <label asp-for="Email">Email</label>
    </div>
    <div>
        <input asp-for="Email" value="@Model.Email">
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
    </div>
</div>
<div class="form-group">
    <div>
        <label asp-for="Mobile">Mobile number</label>
    </div>
    <div>
        <input asp-for="Mobile" value="@Model.Mobile">
        <div><span asp-validation-for="Mobile" class="text-danger"></span></div>
    </div>
</div>
@if (Model.Degrees != null && Model.Degrees.Any())
{
    <div class="form-group">
        <div>
            <label asp-for="DegreeId">Degree</label>
        </div>
        <div class="ptb">
            <select asp-for="DegreeId" id="Degree" value="">
                @if (Model.DegreeId == 0)
                {
                    <option value="0" selected></option>
                }
                else
                {
                    <option value="0"></option>
                }
                @foreach (var item in Model.Degrees)
                {
                    @if (Model.DegreeId == item.Id)
                    {
                        <option value="@item.Id" selected>@item.Title</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                }
            </select>
        </div>
    </div>
}
