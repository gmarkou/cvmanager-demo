@model CVManager.DTO.DegreeDto

@{
    ViewData["Title"] = "Delete Degree";
}

<div class="degrees mt-l">
    <div class="degrees__title">
        Delete Degree
    </div>
</div>

<div class="degree-form">
    <form asp-controller="Degree" asp-action="Delete" method="post">
        <input hidden="hidden" asp-for="Id">
        <div class="form-group">
            <div>
                <label asp-for="Title">Degree Title</label>
            </div>
            <div>
                <input asp-for="Title" readonly="readonly">
            </div>
        </div>

        <div class="q-danger">
            Are you sure?
        </div>
        
        <div class="btn-group">
            <button class="btn btn--danger" type="submit">Delete</button>
            <a class="btn btn--neutral" asp-controller="Degree" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>


