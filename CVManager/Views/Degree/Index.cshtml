@using CVManager.DTO

@model IEnumerable<DegreeDto>

@{
    ViewData["Title"] = "Degrees";
}

<div class="degrees mt-l">
    <div class="degrees__title">
        Degrees List
    </div>
    @if (User.HasClaim(claim => claim.Type == "Editor"))
    {
        <a class="degrees__add" asp-area="" asp-controller="Degree" asp-action="Create">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M12 2C6.49 2 2 6.49 2 12C2 17.51 6.49 22 12 22C17.51 22 22 17.51 22 12C22 6.49 17.51 2 12 2ZM16 12.75H12.75V16C12.75 16.41 12.41 16.75 12 16.75C11.59 16.75 11.25 16.41 11.25 16V12.75H8C7.59 12.75 7.25 12.41 7.25 12C7.25 11.59 7.59 11.25 8 11.25H11.25V8C11.25 7.59 11.59 7.25 12 7.25C12.41 7.25 12.75 7.59 12.75 8V11.25H16C16.41 11.25 16.75 11.59 16.75 12C16.75 12.41 16.41 12.75 16 12.75Z" fill="#2ec27e"></path> </g></svg>    
        </a>
    }
</div>

@if (!Model.Any())
{
    <div class="mt-l">
        No degrees found.
            @if (User.HasClaim(claim => claim.Type == "Editor"))
            {
                <a class="navbar-brand" asp-area="" asp-controller="Degree" asp-action="Edit">Create one</a>
            }
    </div>    
}
else
{
    <div class="mt-l">
        @foreach(var item in Model)
        {
            <div class="degree-card">
                <div class="degree-card__title">
                    @item.Title
                </div>

                @if (User.HasClaim(claim => claim.Type == "Editor"))
                {

                    <a class="degree-card__button" asp-area="" asp-controller="Degree" asp-action="Edit" asp-route-id="@item.Id">
                        <svg fill="#000000" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M18.111,2.293,9.384,11.021a.977.977,0,0,0-.241.39L8.052,14.684A1,1,0,0,0,9,16a.987.987,0,0,0,.316-.052l3.273-1.091a.977.977,0,0,0,.39-.241l8.728-8.727a1,1,0,0,0,0-1.414L19.525,2.293A1,1,0,0,0,18.111,2.293ZM11.732,13.035l-1.151.384.384-1.151L16.637,6.6l.767.767Zm7.854-7.853-.768.767-.767-.767.767-.768ZM3,5h8a1,1,0,0,1,0,2H4V20H17V13a1,1,0,0,1,2,0v8a1,1,0,0,1-1,1H3a1,1,0,0,1-1-1V6A1,1,0,0,1,3,5Z"></path></g></svg>
                    </a>
                    <a class="degree-card__button" asp-area="" asp-controller="Degree" asp-action="Delete" asp-route-id="@item.Id">
